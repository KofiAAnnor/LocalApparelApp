<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".RegistrationActivity"
    android:orientation="vertical"
    android:gravity="center">

    <Button
        android:id="@+id/select_photo_button_id"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/rounded_select_photo"
        android:translationY="-20dp"
        android:text="Select Photo" />

    <EditText
        android:id="@+id/fullName_view"
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:ems="15"
        android:hint="@string/fill_name_hint_string"
        android:inputType="textPostalAddress" />

    <EditText
        android:id="@+id/email_view"
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:ems="15"
        android:hint="@string/email_hint_string"
        android:inputType="textEmailAddress" />


    <EditText
        android:id="@+id/password_view"
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:ems="15"
        android:hint="@string/password_hint_string"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/confirmPassword_view"
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:ems="15"
        android:hint="@string/confirm_pass_hint_string"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/zipcode_View"
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:ems="15"
        android:hint="Zip Code"
        android:inputType="number" />

    <Button
        android:id="@+id/registerButtonView"
        android:layout_width="340dp"
        android:layout_height="55dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/custom_butn"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/sign_up"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorAppBackground" />

    <Button
        android:id="@+id/fakeRegisterButtonView2"
        android:layout_width="147dp"
        android:layout_height="55dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/custom_butn"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/go_to_login"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorAppBackground" />



</LinearLayout>