<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="10dp"
    android:background="@color/colorAppBackground"
    tools:context=".Fragments.UserFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/profile_imageView_id"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginRight="20dp"
            tools:src="@drawable/ic_avatar" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="215dp"
            android:layout_height="66dp"
            android:background="@drawable/profile_header" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_line_seperator" />

    <TextView
        android:id="@+id/hello_textview_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"

        android:text="Hello!"
        android:textColor="@color/colorMyOrange"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="25dp" />

    <LinearLayout
        android:id="@+id/user_ItemsUpForSale_View_id"
        android:layout_width="wrap_content"
        android:layout_height="91dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/item_container"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="30dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_sell_clothes"
            android:fontFamily="serif"
            android:textSize="25sp" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:text="Your Listings"
            android:textColor="@color/colorMyOrange"
            android:textSize="25dp" />

    </LinearLayout>


    <Button
        android:id="@+id/user_logout_button_id"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"

        android:background="@drawable/custom_butn"

        android:text="LOG OUT"
        android:fontFamily="sans-serif-condensed-medium"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorAppBackground" />


</LinearLayout>