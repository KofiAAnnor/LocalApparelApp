<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/popup_container"
    android:paddingHorizontal="20dp"
    android:layout_marginHorizontal="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/detailed_item_image_id"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_gravity="center"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/detailed_item_brand_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:text="Brand"
                android:textColor="@color/colorMyOrange"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/detailed_item_name_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:text="Name"
                android:textColor="@color/colorMyOrange"
                android:fontFamily="sans-serif-condensed-light"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/detailed_item_category_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_edges_light_blue"
                android:paddingLeft="5dp"
                android:text="Sample Text"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/detailed_item_price_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Price"
                android:textColor="@color/colorMyOrange"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="25dp"   />

            <TextView
                android:id="@+id/detailed_item_size_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Size"
                android:textColor="@color/colorMyBlack"
                android:fontFamily="sans-serif-condensed-light"
                android:textSize="15dp"  />

            <TextView
                android:id="@+id/detailed_item_condition_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Condition"
                android:textColor="@color/colorMyBlack"
                android:fontFamily="sans-serif-condensed-light"
                android:textSize="15dp"  />

            <TextView
                android:id="@+id/detailed_item_description_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Description"
                android:textColor="@color/colorMyBlack"
                android:fontFamily="sans-serif-condensed-light"
                android:textSize="15dp" />

            <Button
                android:id="@+id/detailed_dismiss_button_id"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_less_serious"

                android:text="Dismiss"
                android:textColor="@color/colorMyOrange"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="20dp"/>

        </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>
</LinearLayout>