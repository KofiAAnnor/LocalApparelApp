<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="5dp"
    android:paddingTop="5dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/detailed_item_image_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/detailed_item_name_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_edges_light_blue"
                android:paddingLeft="5dp"
                android:text="Sample Text"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/detailed_item_price_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_edges_light_blue"
                android:paddingLeft="5dp"
                android:text="Sample Text"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/detailed_item_brand_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_edges_light_blue"
                android:paddingLeft="5dp"
                android:text="Sample Text"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/detailed_item_condition_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_edges_light_blue"
                android:paddingLeft="5dp"
                android:text="Sample Text"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/detailed_item_size_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_edges_light_blue"
                android:paddingLeft="5dp"
                android:text="Sample Text"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/detailed_item_description_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_edges_light_blue"
                android:paddingLeft="5dp"
                android:text="Sample Text"
                android:textSize="25sp" />

            <Button
                android:id="@+id/detailed_dismiss_button_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edges_blue_kinda"
                android:text="Dismiss" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>